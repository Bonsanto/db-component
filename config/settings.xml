<settings>
	<db>
		<sgbd>postgresql</sgbd>
		<!--todo: URL should be composed by the program and not be given by the user -->
		<url>jdbc:postgresql://localhost:5432/pokemon</url>
		<driverClassName>org.postgresql.Driver</driverClassName>
		<userName>postgres</userName>
		<password>masterkey</password>
		<ip>localhost</ip>
		<port>5432</port>
		<dbName>pokemon</dbName>
		<jmxEnabled>true</jmxEnabled>
		<testWhileIdle>true</testWhileIdle>
		<testOnBorrow>true</testOnBorrow>
		<testOnReturn>false</testOnReturn>
		<logAbandoned>true</logAbandoned>
		<removeAbandoned>true</removeAbandoned>
		<validationInterval>30000</validationInterval>
		<timeBetweenEvictionsRunMillis>30000</timeBetweenEvictionsRunMillis>
		<maxActive>100</maxActive>
		<initialSize>10</initialSize>
		<maxWait>10000</maxWait>
		<removeAbandonedTimeout>60</removeAbandonedTimeout>
		<minEvictableIdleTimeMillis>30000</minEvictableIdleTimeMillis>
		<minIdle>10</minIdle>
		<validationQuery>SELECT 1</validationQuery>
		<jdbcInterceptors>
			org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;
			org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer
		</jdbcInterceptors>
	</db>
